# ============================================
# DispatchAI - Live Voice-Interactive Agentic System
# ============================================

# Copy this file to .env and fill in your credentials

# ============================================
# Required: Holistic AI Bedrock API
# ============================================
HOLISTIC_AI_TEAM_ID=your-team-id-here
HOLISTIC_AI_API_TOKEN=your-team-api-token-here

# ============================================
# Required: LangSmith (for observability)
# ============================================
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGSMITH_PROJECT=emergentica-hackathon
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# ============================================
# Required: Twilio (for phone number)
# ============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# ============================================
# Required: Retell AI (for voice agent)
# ============================================
RETELL_API_KEY=your-retell-api-key
RETELL_AGENT_ID=your-retell-agent-id

# ============================================
# Required: Geocoding API
# ============================================
GEOCODE_API_KEY=your-geocode-api-key

# ============================================
# Optional: Valyu API (for enhanced search)
# ============================================
VALYU_API_KEY=your-valyu-api-key-here

# ============================================
# Application Configuration
# ============================================
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
STREAMLIT_PORT=8501
